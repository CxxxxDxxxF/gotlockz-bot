{
  "name": "gotlockz-bot-ai",
  "version": "1.0.0",
  "description": "AI-accelerated MLB Discord bot with advanced OCR, AI analysis, and real-time insights",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "deploy": "node deploy-commands.js",
    "cleanup": "node cleanup-commands.js",
    "test": "node test-runner.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "health": "node health-check.js",
    "status": "node deployment-status.js",
    "setup": "node test-setup.js",
    "quick-start": "node quick-start.js"
  },
  "keywords": [
    "discord",
    "bot",
    "mlb",
    "betting",
    "ai",
    "ocr",
    "analytics"
  ],
  "author": "GotLockz Team",
  "license": "MIT",
  "dependencies": {
    "@discordjs/builders": "^1.11.2",
    "@discordjs/rest": "^2.2.0",
    "@huggingface/inference": "^2.6.4",
    "axios": "^1.10.0",
    "discord.js": "^14.21.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "node-cron": "^3.0.3",
    "openai": "^5.8.2",
    "sharp": "^0.33.5",
    "tesseract.js": "^5.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "transformIgnorePatterns": [
      "node_modules/(?!(dotenv)/)"
    ]
  }
}
