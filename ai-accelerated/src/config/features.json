{
  "features": {
    "ocr": {
      "enabled": true,
      "engine": "tesseract",
      "languages": ["eng"],
      "confidence_threshold": 0.7
    },
    "mlb": {
      "enabled": true,
      "api_base": "https://statsapi.mlb.com/api/v1",
      "cache_timeout": 300,
      "rate_limit": {
        "max_requests": 5,
        "interval_ms": 200
      }
    },
    "weather": {
      "enabled": true,
      "api_key_env": "OPENWEATHER_API_KEY",
      "cache_timeout": 300
    },
    "ai_analysis": {
      "enabled": true,
      "model": "gpt-4",
      "max_tokens": 500,
      "temperature": 0.7
    },
    "system_monitoring": {
      "enabled": true,
      "interval_seconds": 60,
      "thresholds": {
        "cpu_percent": 80,
        "memory_percent": 85,
        "disk_percent": 90
      }
    }
  },
  "channels": {
    "free_play": {
      "enabled": true,
      "template": "free_play"
    },
    "vip": {
      "enabled": true,
      "template": "vip_pick"
    },
    "lotto": {
      "enabled": true,
      "template": "lotto_ticket"
    }
  }
} 