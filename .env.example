# GotLockz Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# --- Bot Credentials & IDs ---
# Your Discord bot token from the Discord Developer Portal
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord server (guild) ID where the bot will operate
GUILD_ID=your_guild_id_here

# Optional: Your Discord user ID for receiving critical error notifications
OWNER_ID=your_discord_user_id_here

# --- Channel IDs ---
# ID of the channel where /analyze command can be used
ANALYSIS_CHANNEL_ID=analysis_channel_id_here

# ID of the VIP picks channel
VIP_CHANNEL_ID=vip_channel_id_here

# ID of the lotto picks channel  
LOTTO_CHANNEL_ID=lotto_channel_id_here

# ID of the free picks channel
FREE_CHANNEL_ID=free_channel_id_here

# --- API Keys ---
# Your OpenAI API key for generating betting analysis
OPENAI_API_KEY=your_openai_api_key_here

# --- AI Analysis Tuning ---
# OpenAI model to use (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# Temperature for AI analysis (0.0 = very focused, 1.0 = very creative)
ANALYSIS_TEMPERATURE=0.7

# --- File Paths ---
# File to store pick counters (vip, lotto, free counts)
COUNTER_FILE=counters.json

# Log file path
LOG_FILE=gotlockz-bot.log

# --- Google Sheets (for /history command) ---
# Path to Google service account credentials JSON file
GOOGLE_CREDENTIALS_PATH=gcreds.json

# Name of the Google Sheet where picks are stored
GOOGLE_SHEET_NAME=GotLockz Picks
