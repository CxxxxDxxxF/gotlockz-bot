# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID (Client ID)
DISCORD_CLIENT_ID=your_discord_client_id_here

# Discord Guild ID (Server ID) - Optional for development
DISCORD_GUILD_ID=your_discord_guild_id_here

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Deployment
DEPLOY_GLOBAL=false

# Bot Configuration
BOT_PREFIX=!

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Health Check
HEALTH_CHECK_INTERVAL=300000

# Platform Info (Auto-detected)
PLATFORM=darwin
ARCHITECTURE=arm64

# Optional: External APIs (if needed)
# MLB_API_KEY=your_mlb_api_key_here
# WEATHER_API_KEY=your_weather_api_key_here

# Optional: Database (if needed)
# DATABASE_URL=your_database_url_here

# Optional: Redis (if needed)
# REDIS_URL=your_redis_url_here 